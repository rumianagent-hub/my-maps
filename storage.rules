rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /users/{userId}/posts/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
